<h2>Contacts that were not imported</h2>

<div class="table-responsive my-5">
  <table class="table table-striped table-hover ">
    <thead>
      <tr>
        <th>Index (CSV)</th>
        <th>Name</th>
        <th>Date of Birth</th>
        <th>Phone</th>
        <th>Address</th>
        <th>Credit Card</th>
        <th>Email</th>
        <th>Errors</th>
      </tr>
    </thead>
    <tbody>
      <% if @upload_errors.size.positive? %>
        <% csv = csv_file(@file_path) %>

        <% @upload_errors.each do |upload_error| %>
          <% row = find_row_csv(csv, upload_error.upload_row) %>

          <tr>
            <td><%= upload_error.upload_row + 1 %></td>
            <td><%= row[@data_mapped['name']] %></td>
            <td><%= row[@data_mapped['birth_date']] %></td>
            <td><%= row[@data_mapped['phone_number']] %></td>
            <td><%= row[@data_mapped['address']] %></td>
            <td><%= row[@data_mapped['credit_card']] %></td>
            <td><%= row[@data_mapped['email']] %></td>
            <td><%= upload_error.details %></td>
          </tr>
        <% end %>
      <% else %>
        <tr>
          <td colspan="7" class="text-muted">Empty</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= pagy_bootstrap_nav(@pagy).html_safe %>
